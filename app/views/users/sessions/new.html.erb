<div class="col-sm-offset-4 col-sm-4 text-center" style="background-color: #111111; box-shadow:3px 4px 7px 2px; border-radius: 15px; margin-top: 70px; margin-bottom: 30px;">
  <h2 style="margin-bottom: 30px;">ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email,"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'color: #000000' %>
    </div>
    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", style: 'color: #000000' %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <div class="actions" style="color: #000000;">
      <%= f.submit "ログイン", style: "border-radius: 5px;" %>
    </div>
  <% end %>
  <div style="padding-top: 20px;">
    <%= render "users/shared/links"%>
  </div>
</div>
