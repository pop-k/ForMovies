<div class="col-sm-offset-4 col-sm-4 text-center" style="background-color: #111111; box-shadow:3px 4px 7px 2px; border-radius: 15px; margin-top: 70px;">
  <h2>新規登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <div class="field" style="margin-top: 20px;">
          <%= f.label :name, "ユーザーネーム" %><br />
          <%= f.text_field :name, style: 'color: #000000' %>
        </div>
        <div class="field" style="margin-top: 20px;">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'color: #000000' %>
        </div>
        <div class="field" style="margin-top: 20px;">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            <em>( <%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", style: 'color: #000000' %>
        </div>
        <div class="field" style="margin-top: 20px;">
          <%= f.label :password_confirmation, "パスワード確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", style: 'color: #000000' %>
        </div>
        <div class="actions" style="color: #000000; margin-top: 20px;">
          <%= f.submit "Sign up", style: "border-radius: 5px;" %>
        </div>
    <% end %>
    <div style="margin-top: 20px;">
      <%= render "users/shared/links" %>
    </div>
</div>