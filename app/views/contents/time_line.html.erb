<%= render 'contents/search' %>

<% @contents.each do |content| %>
  <div class="col-sm-offset-1 col-sm-10">
    <div class="well" style="background-color: #111111; box-shadow: 3px 3px 3px 1px; border-radius: 10px;">
      <%= link_to user_path(content.user) do %>
        <h2 class="text-right" style="color: white;">
          <%= content.user.name %>
        </h2>
      <% end %>
      <%= link_to content_path(content.id) do %>
        <h2 style="color: white;"><%= content.title %></h2>
        <div class="raw">
          <div class="col-sm-7">
            <h3 style="width: 80%; word-break: break-all; color: white;">
              <%= content.description %>
            </h3>
          </div>
          <div class="col-sm-5">
            <video controls name="media" width="100%">
              <source src=<%= content.video_url.to_s %>>
            </video>
          </div>
        </div>
          <h4 class="text-right" style="color: white;">
            <%= content[:created_at].strftime("%Y-%m-%d %H:%M") %>
          </h4>
      <% end %>
    </div>
  </div>
<% end %>
